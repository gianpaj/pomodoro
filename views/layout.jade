doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    //- The 'crossorigin' attribute enforces a CORS-enabled load. The anonymous value means that the browser should omit any cookies or authentication that the user may have associated with the domain
    //- https://developer.mozilla.org/en-US/docs/Web/Security/Subresource_Integrity
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/main.css')
  body
    .container
        nav.navbar.navbar-default
            .container-fluid
                ul.nav.navbar-nav
                    li
                        a(href="/") Home
                ul.nav.navbar-nav.navbar-right
                    if !user
                        li
                            a(href="/login") Login
                        li
                            a(href="/register") Register
                    else
                        li.dropdown
                            a.dropdown-toggle(data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") Hi #{user.profile.name}
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href="/account") Account
                                li.divider(role="separator")
                                li
                                    a(href="/logout") Logout

        include flash
        block content

    script(src='//cdn.jsdelivr.net/g/jquery@2.2.3,bootstrap@3.3.6,momentjs@2.13.0')
    script(src='/js/main.js')