extends layout

block content
    h1= title
    h3= header
    p.lead A boilerplate for Node.js web applications.
    hr
    .text-center
        .svg.radial-progress
            svg(height="10em", width="10em")
                circle.radial-progress-background(r="", cx="5em", cy="5em", fill="transparent", stroke-dasharray="0em", stroke-dashoffset="0em")
                circle.radial-progress-cover(r="", cx="5em", cy="5em", fill="transparent", stroke-dasharray="0em", stroke-dashoffset="0")
                circle.radial-progress-center(r="", cx="5em", cy="5em", fill="transparent", stroke-dasharray="0em", stroke-dashoffset="0em")

        h3(id="timer")
        button.startStop(id="start").btn.btn-success Start
        button.startStop(id="stop", style="display: none").btn.btn-danger Stop
        | &nbsp;
        button(id="reset").btn.btn-default Reset

    .modal.fade(tabindex="-1", role="dialog", id="modal")
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                    h4.modal-title Register to save your progress?
                .modal-body
                    p If you register you can save this pomorodo and all future ones. Sounds good?
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") Nope
                    button.btn.btn-primary(type="button", id="registerBtn") Yes please

    if user
        script.
            var pomodoroDefaultTime = !{JSON.stringify(user.pomodoroDefaultTime)};
            var logged = true;